#include <zmq.hpp>
#include <string>
#include <iostream>
#include <thread>
#include <chrono>
#include <vector>
#include <queue>
#include <mutex>
#include <condition_variable>

const int numWorkerThreads = 3;

void workerThread(zmq::context_t& context) {
    zmq::socket_t worker(context, ZMQ_REP);
    worker.connect("inproc://workers");

    while (true) {
        zmq::message_t request;
        worker.recv(&request);

        std::string request_str(static_cast<char*>(request.data()), request.size());
        std::cout << "Worker Received Request: " << request_str << std::endl;

        // Simulate some processing time
        std::this_thread::sleep_for(std::chrono::seconds(1));

        // Process the request and prepare the response
        std::string response_msg = "Response to: " + request_str;

        // Send the response directly back to the client
        zmq::message_t response(response_msg.size());
        memcpy(response.data(), response_msg.data(), response_msg.size());
        worker.send(response);
    }
}

int main() {
    zmq::context_t context(1);
    zmq::socket_t server(context, ZMQ_REP);
    server.bind("tcp://*:5555");

    // Create and start worker threads
    std::vector<std::thread> workerThreads;
    for (int i = 0; i < numWorkerThreads; ++i) {
        workerThreads.emplace_back(workerThread, std::ref(context));
    }

    while (true) {
        zmq::message_t request;
        server.recv(&request);

        // Add your logic to process the request here

        // Simulate some processing time
        std::this_thread::sleep_for(std::chrono::seconds(1));

        // Process the request and prepare the response
        std::string request_str(static_cast<char*>(request.data()), request.size());
        std::string response_msg = "Response to: " + request_str;

        // Send the response to one of the worker threads to handle the response sending
        zmq::socket_t responseSender(context, ZMQ_PUSH);
        responseSender.connect("inproc://responses");
        responseSender.send(request, zmq::send_flags::dontwait);
    }

    for (int i = 0; i < numWorkerThreads; ++i) {
        workerThreads[i].join();
    }

    return 0;
}
